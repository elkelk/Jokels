$("#leaderboard").hide();
$("#leaderboard").html("");
var timeDiv = $("#time");
<% sort_type_plural = @sort_type.pluralize %>
<% if @sort_type == "joke" %>
	$("#sort_form").html("<%= escape_javascript(leaderboard_radio_buttons ['top', 'bottom', 'newest'], @sort, 'sort')%>")
<% else %>
	$("#sort_form").html("<%= escape_javascript(leaderboard_radio_buttons ['top', 'bottom', 'most', 'newest'], @sort, 'sort')%>")
<% end %>
enrich_leaderboards();
<% if @sort == "newest" %>
	if ( timeDiv.css("display") != "none")
		timeDiv.fadeOut("fast");
<% else %>
	if ( timeDiv.css("display") == "none")
		timeDiv.fadeIn("fast");
<% end %>
$("#leaderboard").html("<%= escape_javascript(render :partial => "leaderboard", :locals => {:sort => @sort, :sort_type => @sort_type, :time => @time, :users => @users, :jokes => @jokes, :sort_type_plural => sort_type_plural}) %>");
$("#leaderboard").fadeIn("fast");
enable_joke_qtips();