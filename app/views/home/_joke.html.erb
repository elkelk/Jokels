<% if refresh %>
<% # must re-include javascripts on refresh %>
<script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
<% end %>


<div id="joke-container">
  <% if !min %><div id="notice"><%= notice %></div><% end %>
  <div id="question-container">
      <% if !min %>
        <% if joke.user %>
          <%= link_to image_tag(joke.user.image_url, :size => "48x48"), joke.user, :class=>"avatar avatar-left qtip-user", :id => "question-avatar", :title => user_name(joke.user), "data-user-id" => joke.user.id, "data-include-avatar" => "false"%>
        <% else %>
          <% anon_icon_url = anon_user_icon %>
          <%= image_tag anon_icon_url, :size => "48x48", :class => "avatar avatar-left avatar-anon", :title => "Anonymous author" %>
        <% end %>    
        <span class="bubble" id="creator-avatar-bubble"></span>
      <% end %>
    <p id="question" class="question">      
      <%= joke.question %>
    </p>
  </div>

  <p id="click-for-punchline">Click for the <strong>punchline</strong>!</p>
  <p id="show-original">Show original joke</p>
  <div id="answer-container">
    <p id="answer" class="answer">
      <%= joke.answer %>
      <% if !min %>
        <span class="bubble-right bubble bubble-answer" id="answer-avatar-bubble"></span>
        <% if joke.user %>
          <%= link_to image_tag(joke.user.image_url, :size => "48x48"), joke.user, :class=>"avatar avatar-right qtip-user", :id => "question-avatar", :title => user_name(joke.user), "data-user-id" => joke.user.id, "data-include-avatar" => "false"%>
        <% else %>
          <%= image_tag anon_icon_url, :size => "48x48", :class => "avatar avatar-right avatar-anon", :title => "Anonymous author" %>
        <% end %>   
      <% end %>
    </p>
  </div>
  
  <% if !min %>
    <p id="share" class="share">    
      <span class="left">      
    	   <% star_class = "star" + (current_user && current_user.favorited?(joke) ? " favorited" : "") %>
        	<%= link_to "Favorite Me!", favorite_toggle_joke_path(joke), :class => star_class, :method => :get, :remote => true, :title => "Toggle Favorite"%>
        	|      
            <%= render :partial => "shared/votes", :locals => {:joke => joke, :upvote_path => upvote_joke_path(joke), :downvote_path => downvote_joke_path(joke), :id => "joke_#{joke.id}"} %>
        	| <%= link_to "Fork this joke", new_joke_alternate_punchline_path(joke), :method => :get, :remote => true, :title => "Create an alternate punchline", :class => "fork" %>
          |
            <a href="#" id="tags">Tags</a>
          |      
            <% permalink = url_for(:action => "show", :controller => "jokes", :id => joke.slug, :only_path => false)%>   
            <a href="#" id="permalink">Permalink</a> 
          | <%= link_to image_tag("mobile-phone.png", :class=>"phone", :title => "Send this joke via SMS"), sms_joke_joke_path(joke),:method => :get, :remote => true  %>
          | <span><iframe src="http://www.facebook.com/plugins/like.php?app_id=168063983260429&amp;href=<%=CGI.escape(joke.bitly_url)%>&amp;send=false&amp;layout=button_count&amp;width=50&amp;show_faces=false&amp;action=like&amp;colorscheme=light&amp;font&amp;height=21" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:50px; height:21px;" allowTransparency="true"></iframe></span>
          | <span><a href="http://twitter.com/share" class="twitter-share-button" data-url="<%=joke.bitly_url%>" data-text="<%=joke.question%>" data-count="horizontal" data-via="jokelscom">Tweet</a>        
        </span>
        <span class="share-bar-right">      
          <% if !current_user.nil? && current_user.is_admin %>
            <%= check_box_tag("joke-#{joke.id}", value = joke.is_kid_safe, checked = joke.is_kid_safe, :class => "ajax-checkbox joke-checkbox", "data-href" => is_kid_safe_toggle_joke_path(joke)) %> Is Kid Safe?
          <% end %>
          <% if joke.user %>
            <% if joke.user == current_user %>[<%= link_to "Edit joke", edit_joke_path(joke), :method => :get, :remote => true %>]<% end %>
          <% end %>
          <% if joke.jokeler_url %> <%= link_to image_tag("jokeler.jpg", :size => "23x23", :title =>"The Jokeler strikes again!"), joke.jokeler_url %> <% end %>
          <%= image_tag("info.png", :size => "16x16", :class=>"qtip-joke", "data-joke-id" => joke.id, "data-on-joke" => "true") %>
        </span>
      </span>
    </span>
  <% end %>

  <% if joke.has_forks?(is_clean_mode?) %>
    <% if min %>
      <% alt_punchline_path = joke_alternate_punchlines_path(joke, :only_path => false, :format => :js) + "?min=true" %>
      <p id="alternate-punchlines-button"><%= link_to raw("This joke has <strong>forked</strong>! Click to see the <strong>alternate punchlines</strong>!"), "#alt-punch", "data-url" => alt_punchline_path, :id => "alternate-punchline-embed", :name=> "alt-punch"%></p>
    <% else %>
      <p id="alternate-punchlines-button"><%= link_to raw("This joke has <strong>forked</strong>! Click to see the <strong>alternate punchlines</strong>!"), joke_alternate_punchlines_path(joke), :method => :get, :remote => true %></p>
    <% end %>
    <span id="alternate_punchlines"></span>
  <% end %>

  <% if !min %>
    <p id="refresh-joke"><%= link_to raw("See another <strong>random joke!</strong>"), refresh_joke_home_path, :method => :get, :remote => true %></p>
  <% end %>

  <% if min %>
    <p id="share" class="share" style="text-align:center; padding-top:10px; padding-bottom:10px" >
      <b><a href="<%= url_for(:action => "show", :controller => "jokes", :id => joke.slug, :only_path => false)%>">This Joke</a></b> brought to you by <b><%= link_to "Jokels.com", "http://www.jokels.com" %></b>
    </p>
  <% end %>
</div>

<% if !min %>
  <% permalink_embed = escape_javascript( "<script src=\"" + url_for(:action => "show_min", :controller => "jokes", :id => joke.slug, :only_path => false, :format => :js) + "\"></script>") %>   
<script type="text/javascript">
    $(document).ready(function(){
      $('#permalink').qtip({
        show: 'click',
        hide: 'click unfocus',
        content: '<div><span>Permalink:</span> <input value="<%=permalink%>" class="permalink-input"/></div><div><span>Short URL:</span> <input value="<%=joke.bitly_url%>" class="permalink-input short-url"/> <%= link_to image_tag("barcode-2d.png", :class=>"qrcode"), "#{joke.bitly_url}.qrcode", {:title => "QR Code", :target => "_blank"} %></div><div> <span>Joke Embed: </span><input value="<%= permalink_embed %>" class="permalink-input"/></div>',
    		style: {
    		  classes: 'ui-tooltip-rounded ui-too();ltip-shadow ui-tooltip-dark'
    		},		
    		position:{
    			my: 'top left',
    			at: 'bottom center',
    			target: $('#permalink')
    		},
    		events: {
    		  show: function(event, api) {
    		    $('.permalink-input').click(function(){$(this).select();});
    		  }
    		}		
    	});
      $('#tags').qtip({
        show: 'click',
        hide: 'click unfocus',
        content: '<%=escape_javascript(raw (tag_links(joke.tag_list)))%><strong><%= link_to "+ Add/remove tags", add_tags_joke_path(joke),:method => :get, :remote => true  %></strong>',
        style: {
          classes: 'ui-tooltip-rounded ui-too();ltip-shadow ui-tooltip-dark'
        },    
        position:{
          my: 'top left',
          at: 'bottom center',
          target: $('#tags')
        }   
      });

      enable_user_qtips();
      enable_joke_qtips();
      enable_checkbox();

    	
      $("#refresh-joke").click(function(){
        $("#joke").slideUp("fast");
        $("#main").append('<div id="loading">Loading joke...</div>');
        $("#loading").delay(1000).fadeIn("slow");
      })
    })
  </script>
<% end %>